<UserControl x:Class="TabNavApp.Api.Documents.DocumentListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="81" d:DesignWidth="462" Height="50" Width ="Auto" HorizontalContentAlignment="Stretch" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">

    <Grid x:Name="LayoutRoot" Background="Transparent" Height="50" Width="Auto" MouseRightButtonDown="LayoutRoot_MouseRightButtonDown">
        <TextBlock FontFamily="Verdana" FontSize="14" Foreground="#FF4F8DCE" Height="20" Margin="12,0,59,0" Name="prefLabelTB" Text="{Binding Name}" VerticalAlignment="Top" />
        <TextBlock FontFamily="Verdana" FontSize="10" Foreground="#FF484848" Height="15" Margin="12,20,59,0" Name="altLabelsTB" Text="{Binding CreationDate_Author}" VerticalAlignment="Top" />
        <TextBlock FontFamily="Verdana" FontSize="10" Foreground="#FF484848" Height="15" Margin="12,35,59,0" Name="descriptionTB"  VerticalAlignment="Top" />
        <Button Height="40" Margin="0,6,6,0" Name="button1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="40" Visibility="Collapsed" ></Button>
    </Grid>
</UserControl>
